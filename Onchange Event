<html>
    <head></head>
    <body>
        <script>
            var arr=["red","green","blue","black","teal"];
            var ddl="";
            ddl+="<select id='dropdown' onchange='check()'>";
            for(i=0;i<=arr.length;i++)
            {
                ddl+="<option>"+arr[i]+"</option>"
            }
            ddl+="</select>";
            document.write(ddl);
            function check()
            {
                var tt=dropdown.value;
                dv.style.backgroundColor=tt;
            }
        </script>
        <div id="dv" style="height: 300px;width: 300px"></div>
    </body>
</html>
